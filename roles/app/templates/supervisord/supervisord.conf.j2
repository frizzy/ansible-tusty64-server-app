[supervisord]
logfile = /usr/local/var/log/supervisord/supervisord.log
logfile_maxbytes = 50MB
logfile_backups = 10
loglevel = info

environment=PATH='/usr/local/bin:/usr/bin:/bin',APP_USER='{{ user }}',APP_HOME='/home/{{ user }}'

[supervisorctl]

[rpcinterface:supervisor]
supervisor.rpcinterface_factory = supervisor.rpcinterface:make_main_rpcinterface

[inet_http_server]
port = 127.0.0.1:9001

[include]
files = /usr/local/etc/supervisord.d/*.conf
